int  n, m;

m = x % 1000;
n = m /100;
System.out.println("\n The digit in the Hundred's place = "+n);

m = m % 100;
n = m / 10;
System.out.println("\n The digit in the Ten's place = "+n);

n = m % 10;
System.out.println("\n The digit in the Unit's place = "+n);// TODO code application logic here
